<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activity.DetailProductActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetailProduct"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/custom_bg"
        android:padding="5dp"
        app:title="Chi Tiết Sản Phẩm "
        app:titleTextColor="#E11313" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgDetailProduct"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameDetailProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="Sản Phẩm"
                android:textColor="#FF00EE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/txtPriceDetailProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textColor="#FF00EE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:layout_weight="1"
                android:id="@+id/spinnerPriceDetailProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/spinner"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:popupBackground="@drawable/custom_bg"
                android:textAlignment="center" />

            <Button
                android:layout_weight="1"
                android:id="@+id/btnPriceDetailProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:autoSizeTextType="uniform"
                android:text="Thêm Giỏ Hàng"
                android:textColor="#F02"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mô Tả Sản Phẩm"
                android:textColor="#F02"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDescriptionDetailsProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:text="congdep trai top 1 sever"
                    android:textColor="#673AB7"
                    android:textSize="20sp" />
            </ScrollView>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
