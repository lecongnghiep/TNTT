<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_weight="8"
    android:gravity="center"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    tools:context=".Activity.ContactActivity">
    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/custom_bg"
        app:title="Hello Bro"
        app:titleTextColor="#FF0015"
        android:id="@+id/toolbarContact"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <TextView
        android:layout_weight="2"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#FFEB3B"
       android:gravity="center"
        android:textSize="35sp"
        android:text="Liên Hệ Với Mình Qua "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@drawable/custom_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/people"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFEB3B"
            android:textSize="25sp"
            android:text="Họ Và Tên: Lê Công Nghiệp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/custom_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:background="@drawable/custom_bg"
            android:src="@drawable/mes"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFEB3B"
            android:textSize="25sp"
            android:text="Email : Lecongnghiep1998@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/custom_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
            android:background="@drawable/custom_bg"
            android:src="@drawable/call"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFEB3B"
            android:textSize="25sp"
            android:text="Điện Thoại : 0335999967"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>